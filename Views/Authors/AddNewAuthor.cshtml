@{
    ViewData["Title"] = "Dodaj autora - ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5" style="max-width: 600px;">
    <div class="row justify-content-center align-items-center p-3 border">
        <div class="col">
            <form onsubmit="addAuthor(event)" oninput="clearFeedback()">
                <fieldset class="text-center">
                    <h1 class="mb-3" style="font-size: 20px; font-weight: bold;">Dodaj autora</h1>
                    <div class="mb-3">
                        <label class="form-label" for="firstName">Imię:</label>
                        <input type="text" class="form-control" id="firstName" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="lastName">Nazwisko:</label>
                        <input type="text" class="form-control" id="lastName" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Dodaj</button>
                    <div id="feedback" class="mt-3"></div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="~/js/addAuthor.js"></script>