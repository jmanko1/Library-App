@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Zarejestruj się - ";
}
<form class="mt-5 border border-dark p-4 me-auto ms-auto" onsubmit="handleRegistration(event)" oninput="clearFeedback(event)" style="max-width: 600px;">
    <fieldset class="text-center">
        <h1 class="mb-3" style="font-size: 20px; font-weight: bold;">Zarejestruj się</h1>
        <div class="container">
            <div class="mt-3 row justify-content-center">
                <div class="col-6">
                    <label for="login" class="form-label">Login:</label>
                    <input type="text" class="form-control" id="login" required>
                </div>
                <div class="col-6">
                    <label for="email" class="form-label">Adres email:</label>
                    <input type="email" class="form-control" id="email" required>
                </div>
            </div>
            <div class="mt-3 row justify-content-center">
                <div class="col-6">
                    <label for="password" class="form-label">Hasło:</label>
                    <input type="password" class="form-control" id="password" required>
                </div>
                <div class="col-6">
                    <label for="confirmPassword" class="form-label">Potwierdź hasło:</label>
                    <input type="password" class="form-control" id="confirmPassword" required>
                </div>
            </div>
            <div class="mt-3 row justify-content-center">
                <div class="col-6">
                    <label for="firstname" class="form-label">Imię:</label>
                    <input type="text" class="form-control" id="firstname" required>
                </div>
                <div class="col-6">
                    <label for="lastname" class="form-label">Nazwisko:</label>
                    <input type="text" class="form-control" id="lastname" required>
                </div>
            </div>
            <div class="mt-3 row justify-content-center">
                <div class="col-6">
                    <label for="street" class="form-label">Ulica:</label>
                    <input type="text" class="form-control" id="street" required>
                </div>
                <div class="col-6">
                    <label for="city" class="form-label">Miasto:</label>
                    <input type="text" class="form-control" id="city" required>
                </div>
            </div>
        </div>
        <button type="submit" class="mt-3 btn btn-primary">Zarejestruj się</button>
        <div id="feedback" class="mt-3"></div>
        <div class="text-center mt-3">
            Masz już konto? 
            <a href="/users/login">Zaloguj się</a>
        </div>
    </fieldset>
</form>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="~/js/register.js"></script>
