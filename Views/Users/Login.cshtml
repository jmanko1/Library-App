@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Zaloguj się - ";
}
<form class="mt-5 border border-dark p-4 me-auto ms-auto" onsubmit="handleLogin(event)" oninput="clearError(event)" style="max-width: 600px;">
    <fieldset class="text-center">
        <h1 class="mb-3" style="font-size: 20px; font-weight: bold;">Zaloguj się</h1>
        <div class="mb-3">
            <label for="login" class="form-label">Login:</label>
            <input type="text" class="form-control" id="login" required>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Hasło:</label>
            <input type="password" class="form-control" id="password" required>
        </div>
        <button type="submit" class="btn btn-primary">Zaloguj się</button>
        <div id="errorMessage" class="mt-3" style="color:red;"></div>
        <div class="text-center mt-3">
            Nie masz konta? 
            <a href="/users/register">Zarejestruj się</a>
        </div>
    </fieldset>
</form>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="~/js/login.js"></script>